{% extends "../default.twig" %}

{% block title %}Sakado - Connexion{% endblock %}

{% block css%}<link rel="stylesheet" href="/css/form.css">{% endblock %}

{% block nav %}
    <li><a href="/">Accueil</a></li>
    <li><a href="/host">Devenez Hote</a></li>
    <li><a href="/list-detail">Reserver un séjour</a></li>
    <li><a href="/register">Inscription</a></li>
{% endblock %}


{% block scripts %}
{#    <script src="js/account.js" charset="utf-8"></script>#}
{#    <script src="js/scroll.js" charset="utf-8"></script>#}
{% endblock %}

{% block content %}
<div class="modal-log" id="login" role="dialog" >
    <div class="modal-wrapper" >
        <div class="modal-body">
            <section class="left">
                <section class="title">
                    <h2>Contactez le support</h2>
                </section>
                <form class="form-help form-log" method="post">
                    <fieldset class="input_field message">
                        <label>Email</label>
                        <input type="text" name="email" id="email" value="{{ values.email }}">
                    </fieldset>
                    <fieldset class="input_field object">
                        <label>Objet</label>
                        <input type="text" name="object" value="{{ values.object }}" id="object">
                    </fieldset>
                    <fieldset class="input_field object">
                        <label>Message</label>
                        <textarea maxlength="3000" name="message" id="message">{{ values.message }}</textarea>
                    </fieldset>
                    <div class="g-recaptcha" name="captcha" data-sitekey="6LdIMK8UAAAAAF98Q0V6mCpStr2-Hg6jpzeKyFdb"></div>
                    <fieldset class="input_field submit">
                        <input type="submit" value="Envoyer mon message">
                    </fieldset>
                    {% if errors %}
                        <div class="alert alert-danger">
                            {% for error in errors %}
                                <li>Erreur: {{ error }}</li>
                            {% endfor %}
                        </div>
                    {% endif %}
                </form>
            </section>
            <section class="right">
                <div class="cover">
                    <h3>Vous avez une <br>question ?</h3>
                    <h4>Alors ne perdez pas une seconde, téléphonez-nous !</h4>
                    <a class="register-adjust" href="#">06.54.85.95.12</a>
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %}
